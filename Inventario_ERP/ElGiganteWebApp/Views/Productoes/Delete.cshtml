@model ElGiganteWebApp.Models.Producto

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>
@if (ViewBag.AllowDelete)
{
    <h3>Are you sure you want to delete this?</h3>
}
else
{
    <h3 class="text-danger"> El producto tiene relacionado categoria u otra relacion. Verificar en tabla de BD</h3>
}
<div>
    <h4>Producto</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NombreProducto)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NombreProducto)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DescripcionProducto)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DescripcionProducto)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UnidadMedida)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UnidadMedida)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CantidadExistencia)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CantidadExistencia)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IdBodegaNavigation)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdBodegaNavigation.IdBodega)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IdCategoriaNavigation)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdCategoriaNavigation.IdCategoria)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IdProveedorNavigation)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdProveedorNavigation.IdProveedor)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="IdProducto" />
        @if (ViewBag.AllowDelete)
        {
            <input type="submit" value="Delete" class="btn btn-danger" />
        }
         |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
